{
  "application": {
    "title": "Tabs Demo",
    "meta_title": "Sys application",
    "meta_description": "Meteor Kitchen - example application",
    "copy_files": [],
    "collections":[],
    "packages": {
      "meteor": [
      ],
      "mrt": []
    },
    "private_zone": {
    },
    "public_zone": {
      "pages": [
        {
          "name": "tabs",
          "components": [
            {
              "name": "tabs",
              "type": "template",
              "template_data": {
                "name": "tabsComponent",
                "template": "tabs",
                "class": "nav nav-pills",
                "items": [
                  {
                    "title": "tab1",
                    "icon_tag": "i",
                    "icon_class": "fa fa-check-square",
                    "content": "{{> contentTab1}}"
                  },
                  {
                    "title": "tab2",
                    "content": "hello tab2 !!"
                  }
                ],
                "components": [
                  {
                    "name": "contentTab1",
                    "template": "simple",
                    "data": "{{> contentTab2}}",
                    "components": [
                      {
                        "name": "contentTab2",
                        "template": "simple",
                        "data": "hello tab1 from tab2"
                      }
                    ]
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  }
}
